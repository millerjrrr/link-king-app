{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react-native",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "types": ["react", "react-native"],
    "paths": {
      "@src/*": ["src/*"],
      "@assets/*": ["assets/*"],
      "@screens/*": ["src/screens/*"],
      "@navigation/*": ["src/navigation/*"],
      "@hooks/*": ["src/hooks/*"],
      "@store/*": ["src/store/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@auth/*": ["src/screens/auth/*"],
      "@Console/*": ["src/screens/Console/*"],
      "@components/*": ["src/components/*"]
    }
  },
  "include": [
    "src/**/*",
    "assets/**/*",
    "declarations.d.ts",
    "env.d.ts",
    "reanimated-fix.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
